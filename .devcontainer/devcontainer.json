{
  // -----------------------------------------------------------
  //  VS Code Dev Container for the CSV Insight Assistant project
  //  • Python 3.11 image
  //  • Installs requirements on first open
  //  • Auto‑runs Streamlit on port 8501
  // -----------------------------------------------------------
  "name": "csv-insight-assistant",
  "image": "mcr.microsoft.com/devcontainers/python:3.11",

  // Install Python deps every time the container’s contents refresh
  "updateContentCommand": "pip install -r requirements.txt && echo '✅ requirements installed'",

  // Start the app as soon as you attach
  "postAttachCommand": "streamlit run app.py --server.port 8501 --server.enableCORS false --server.enableXsrfProtection false",

  // Expose Streamlit to your host browser
  "forwardPorts": [8501],

  // Use the default VS Code user (keeps permissions simple)
  "remoteUser": "vscode"
}
